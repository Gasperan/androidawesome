<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bar"
            app:titleTextColor="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@android:color/holo_red_light"
        android:src="@drawable/add_product" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/main_image"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/iphone6s"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_alignTop="@+id/title"
                    android:alpha="0.5"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:layout_marginTop="5dp"
                    android:text="$456.000"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:layout_below="@+id/main_image"
                    android:layout_centerHorizontal="true" />
                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@android:color/darker_gray"
                    android:layout_below="@+id/title"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/view" />

                <TextView
                    android:id="@+id/desccripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginTop="5dp"
                    android:text="Tipo de Pantalla: Led/nPulgadas: 48\nResolución: Ultra HD 3840 x 2160\nnSmart TV: S\nPuertos HDMI: 3\nPuertos USB: 2\nDimensiones: 1087.1 x 700.5 x 277.8 mm\nTasa de Refresco: 60\nSintonizador Digital: Si\nGarantia: 1 Año"
                    android:textColor="#222"
                    android:alpha="0.6"
                    android:textSize="14sp"
                    android:layout_below="@+id/title"
                    android:layout_alignLeft="@+id/view"
                    android:layout_alignStart="@+id/view"
                    android:layout_alignRight="@+id/view"
                    android:layout_alignEnd="@+id/view" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>



        </RelativeLayout>

</android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>

